@model List<Table>
@{
    ViewData["Title"] = "Select Table";
}

<div class="table-container">
    <div class="table-background">
        <div class="table-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>
    
    <div class="table-content">
        <div class="table-card">
            <div class="table-header">
                <div class="table-logo">
                    <i class="fas fa-utensils"></i>
                </div>
                <h1>Select Your Table</h1>
                <p>Choose an available table to start your dining experience</p>
            </div>

            <div class="tables-grid">
                @foreach (var table in Model)
                {
                    var isOwnedByCurrentSession = table.CurrentSessionId == ViewBag.CurrentSessionId;
                    var canAccess = !table.IsOccupied || isOwnedByCurrentSession;
                    
                    <div class="table-item @(table.IsOccupied ? (isOwnedByCurrentSession ? "owned" : "occupied") : "available")" 
                         onclick="selectTable(@table.Id, @table.IsOccupied.ToString().ToLower(), @isOwnedByCurrentSession.ToString().ToLower())"
                         data-table-id="@table.Id"
                         data-session-id="@table.CurrentSessionId"
                         data-current-session="@ViewBag.CurrentSessionId">
                        <div class="table-icon">
                            <i class="fas fa-table"></i>
                        </div>
                        <div class="table-number">Table @table.Id</div>
                        <div class="table-info">
                            @if (table.IsOccupied)
                            {
                                if (isOwnedByCurrentSession)
                                {
                                    <div class="table-status owned">
                                        <i class="fas fa-user-check"></i>
                                        <span>Your Table</span>
                                    </div>
                                    <div class="table-seats">@table.Pax guests</div>
                                    <div class="table-actions">
                                        <button class="release-btn" onclick="event.stopPropagation(); releaseTable(@table.Id)">
                                            <i class="fas fa-door-open"></i>
                                            Release
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="table-status occupied">
                                        <i class="fas fa-user-friends"></i>
                                        <span>Occupied</span>
                                    </div>
                                    <div class="table-seats">@table.Pax guests</div>
                                }
                            }
                            else
                            {
                                <div class="table-status available">
                                    <i class="fas fa-check-circle"></i>
                                    <span>Available</span>
                                </div>
                                <div class="table-seats">Ready for you!</div>
                            }
                        </div>
                    </div>
                }
            </div>

            @* Show order history for owned tables *@
            @{
                var ownedTables = Model.Where(t => t.IsOccupied && t.CurrentSessionId == ViewBag.CurrentSessionId).ToList();
            }
            @if (ownedTables.Any())
            {
                <div class="owned-tables-section">
                    <div class="section-header">
                        <h3>
                            <i class="fas fa-receipt"></i>
                            Your Table Orders
                        </h3>
                        <p>View order history for your current tables</p>
                    </div>
                    <div class="owned-tables-list">
                        @foreach (var table in ownedTables)
                        {
                            <div class="owned-table-item">
                                <div class="table-info">
                                    <div class="table-name">
                                        <i class="fas fa-table"></i>
                                        Table @table.Id
                                    </div>
                                    <div class="table-guests">@table.Pax guests</div>
                                </div>
                                <div class="table-actions">
                                    <a href="@Url.Action("OrderHistory", "Customer", new { tableId = table.Id })" class="btn btn-primary">
                                        <i class="fas fa-history"></i>
                                        View Orders
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="table-footer">
                <a asp-controller="Home" asp-action="Index" class="back-btn">
                    <i class="fas fa-arrow-left"></i>
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Guest Selection Modal -->
<div id="tableModal" class="modal-overlay">
    <div class="modal-backdrop"></div>
    <div class="modal-container">
        <div class="modal-card">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="modal-title-section">
                        <h2 class="modal-title">Pax Count</h2>
                        <p class="modal-subtitle">How many guests will be dining?</p>
                    </div>
                </div>
                <button class="modal-close" onclick="closeTableModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
