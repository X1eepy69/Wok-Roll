                            <span class="guest-label">Guest</span>
                        </div>
                        <div class="guest-option" data-value="2">
                            <div class="guest-icon">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <span class="guest-number">2</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="3">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">3</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="4">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">4</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="5">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">5</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="6">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">6</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="7">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">7</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="8">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">8</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="9">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">9</span>
                            <span class="guest-label">Guests</span>
                        </div>
                        <div class="guest-option" data-value="10">
                            <div class="guest-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="guest-number">10</span>
                            <span class="guest-label">Guests</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button class="modal-btn secondary" onclick="closeTableModal()">
                    <i class="fas fa-times"></i>
                    <span>Cancel</span>
                </button>
                <button class="modal-btn primary" onclick="confirmTableSelection()">
                    <i class="fas fa-check"></i>
                    <span>Continue</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/customer-styles.css" />
}

@section Scripts {
    <script>
        let selectedTableId = null;
        let selectedGuestCount = 1;

        function selectTable(tableId, isOccupied, isOwnedByCurrentSession) {
            // Check if table is occupied by someone else
            if (isOccupied && !isOwnedByCurrentSession) {
                alert('This table is currently occupied by another customer. Please select an available table.');
                return;
            }
            
            // If it's owned by current session, go directly to menu
            if (isOwnedByCurrentSession) {
                window.location.href = '@Url.Action("AddOrder", "Customer")' + '?tableId=' + tableId;
                return;
            }
            
            selectedTableId = tableId;
            document.getElementById('tableModal').classList.add('show');
            
            // Initialize picker
            initializePicker();
        }

        function closeTableModal() {
            document.getElementById('tableModal').classList.remove('show');
            selectedTableId = null;
        }

        function initializePicker() {
            const picker = document.getElementById('guestPicker');
            const items = picker.querySelectorAll('.guest-option');
            
            // Set initial selection
            items.forEach((item, index) => {
                item.classList.remove('selected');
                if (index === 0) {
                    item.classList.add('selected');
                    selectedGuestCount = parseInt(item.dataset.value);
                }
            });

            // Add click handlers
            items.forEach(item => {
                item.addEventListener('click', function() {
                    items.forEach(i => i.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedGuestCount = parseInt(this.dataset.value);
                });
            });
        }

        function confirmTableSelection() {
            if (!selectedTableId || !selectedGuestCount) {
                alert('Please select a valid number of guests.');
                return;
            }

            // Set PAX and mark table as occupied by current session
            fetch('@Url.Action("SetPax", "Customer")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `tableId=${selectedTableId}&pax=${selectedGuestCount}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Redirect to menu
                    window.location.href = '@Url.Action("AddOrder", "Customer")?tableId=' + selectedTableId;
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while selecting the table.');
            });
        }

        function releaseTable(tableId) {
            if (confirm('Are you sure you want to release this table? This will clear your cart and free up the table.')) {
                fetch('@Url.Action("ReleaseTable", "Customer")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `tableId=${tableId}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Reload the page to update table status
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while releasing the table.');
                });
            }
        }

        // Close modal when clicking outside
        document.getElementById('tableModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeTableModal();
            }
        });
    </script>
    
}